{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2015",
    /* Modules */
    "module": "commonjs",
    /* Emit */
    "declaration": true,
    "outDir": "./dist",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}